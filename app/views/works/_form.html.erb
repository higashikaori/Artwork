<%= form_with model: work do |f| %>
<%= render 'layouts/errors', obj: work %>
  <div class="form-group">
    <%= f.select :state, [["完成（全て入力）", "art"], ["制作過程（文章のみ必須）", "making"], ["制作メモ（文章のみ必須）", "memo"]], include_blank: "選択して下さい" %>
  </div>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :body %>
    <%= f.text_area :body, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.file_field :work_image, accept: "image/*" %>
  </div>
  <div class="form-group">
    <%= f.submit '投稿', class: "btn btn-primary" %>
  </div>
<% end %>
