<% @users.each do |user| %>
<div class="card my-3 p-3">
  <div class="col">
    <%= link_to user_path(user) do %>
      <%= image_tag user.get_profile_image(70,70) %>
      <%= user.name %>
      @<%= user.name_id %>
    <% end %>
  </div>
  <div class="col">
    <%= user.profile %>
  </div>
</div>
<% end %>