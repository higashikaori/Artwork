<div class="conteiner px-5">
  <div class="row">
    <div class="col-md-3 mx-auto">
      <p>投稿の編集</p>
      <%= form_with model: @user do |f| %>
        <%= render 'layouts/errors', obj: @user %>
        <div>
          <%= f.label :プロフィール画像 %><br>
          <%= f.file_field :profile_image, accept: 'image/*' %>
        </div>
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :id %>
          <%= f.text_field :name_id, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :profile %>
          <%= f.text_area :profile, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit '編集', "data-confirm" => "編集を完了しますか？", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
