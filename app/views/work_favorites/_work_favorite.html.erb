<% if work.work_favorited_by?(current_user) %>
  <%= link_to work_work_favorite_path(work), method: :delete do %>
    ♥<%= work.work_favorites.count %>いいね
  <% end %>
<% else%>
  <%= link_to work_work_favorite_path(work), method: :post do %>
    ♡<%= work.work_favorites.count %>いいね
  <% end %>
<% end %>