<% if work.work_favorited_by?(current_user) %>
  <%= link_to work_work_favorite_path(work), method: :delete, remote: true do %>
    ♥<%= work.work_favorites.count %>いいね
  <% end %>
<% else%>
  <%= link_to work_work_favorite_path(work), method: :post, remote: true do %>
    ♡<%= work.work_favorites.count %>いいね
  <% end %>
<% end %>