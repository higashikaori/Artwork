<% if user_signed_in? %>
  <%= form_with url: search_path, method: :get do |f| %>
    <%= f.text_field :content %>
    <%= f.select :model, options_for_select({ "User" => "user", "Work" => "work" }) %>
    <%= f.select :method, options_for_select({ "あいまい検索" => "partial", "完全一致で検索" => "perfect"}) %>
    <%= f.submit '検索' %>
  <% end %>
<% end %>